<h2>Switch Organization</h2>

<%= simple_form_for(@user, url: user_set_organization_path(current_user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :organization, collection: @organizations, value_method: :identifier, label_method: :name, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,   "Switch", class: "btn btn-default" %>
    <%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>
  </div>
<% end %>
