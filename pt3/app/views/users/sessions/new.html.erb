<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table width='100%' style='border: 0px !important;'>
   <tr style='border: 0px !important;'>
      <td style='border: 0px !important;'>
         <%= image_tag("globe-medium.png", size: "282x276") %>
      </td>
      <td style='border: 0px !important;'>
         <h1>Process and Artifact Compliance Tool</h1>
      </td>
   </tr>
  </table>
   <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean, class: 'largerCheckbox' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,   "Log in",
                  class:    "btn btn-default" %>
  </div>
<% end %>

<% if @organization_set %>
  <%= render "users/shared/links" %>
<% end %>
