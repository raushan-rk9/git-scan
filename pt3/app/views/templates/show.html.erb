<ul class="list-group">
  <li class="list-group-item active">
    <h5>
      <%= "Template: #{@template.title}" %>
    </h5>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Description:</strong>
      <%= @template.description %><br>
      <strong>Notes:</strong>
      <%= @template.notes %><br>
      <strong>Type:</strong>
      <%= @template.template_type %><br>
      <strong>Class:</strong>
      <%= @template.template_class %><br>
    </p>
  </li>
</ul>

<%= link_to 'Edit', edit_template_path(@template, awc: params[:awc]) , class: 'btn btn-default' %>
<%= link_to 'New Template', new_template_path(@template, awc: params[:awc]), class: "btn btn-primary" %>
<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
