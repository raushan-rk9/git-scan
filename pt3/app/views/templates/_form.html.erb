<%= simple_form_for( @template, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tlid, label: 'Template ID' %>
    <%= f.input :title %>
    <%= f.input :description, as: :summernote %>
    <%= f.input :notes, as: :summernote %>
    <%= f.input :template_type %>
    <%= f.input :template_class %>
    <%= f.input :source %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { "disable-with": t('misc.save') } %>

    <% if policy(template).edit? && template.id %>
      <%=
          link_to 'Edit Template Checklists',
                  template_template_checklists_path(template, awc: params[:awc]),
                  class: 'btn btn-default'
       %>
      <%=
          link_to 'Edit Template Documents',
                  template_template_documents_path(template, awc: params[:awc]),
                  class: 'btn btn-default'
       %>
    <% end %>

    <% if @template.id.present? %>
      <%=
           link_to 'Export',
                    template_export_path(@template, awc: params[:awc]),
                    target: :_blank,
                    class: "btn btn-primary"
       %>
      <%=
           link_to 'Import',
                   template_import_path(@template, awc: params[:awc]),
                   class: "btn btn-primary"
       %>
    <% end %>

    <% if @template.id.present? %>
      <%=link_to 'Show', template_path(@template, awc: params[:awc]), class: 'btn btn-default' %>
    <% end %>

    <% if controller.action_name == 'edit' %>
      <%= link_to 'New Template', new_template_path(@template, awc: params[:awc]), class: "btn btn-primary" %>
    <% end %>

    <%= link_to 'Back', 'javascript:null', class: "btn", onclick: 'validateBack(1)' %>

    <% if @undo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
    <% end %>

    <% if @redo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
    <% end %>
  </div>
<% end %>
