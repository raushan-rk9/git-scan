<ul class="list-group">
  <li class="list-group-item active">
    <h5>
      <%= "Template Checklist: #{@template_checklist.title}" %>
    </h5>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Description:</strong>
      <%= @template_checklist.description %><br>
      <strong>Notes:</strong>
      <%= @template_checklist.notes %><br>
      <strong>Type:</strong>
      <%= @template_checklist.checklist_type %><br>
      <strong>Class:</strong>
      <%= @template_checklist.checklist_class %><br>
    </p>
  </li>
</ul>

<% if policy( @template_checklist).edit? &&  @template_checklist.id %>
  <%=
      link_to 'Edit Template Checklist',
              edit_template_template_checklist_path(@template,
                                                     @template_checklist,
                                                     awc: params[:awc]),
              class: 'btn btn-default'
    %>
<% end %>

<%=
    link_to 'New Template Checklist',
            new_template_template_checklist_path(@template,
                                                 @template_checklist,
                                                 awc: params[:awc]),
            class: "btn btn-primary"
%>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
