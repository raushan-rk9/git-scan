<%= simple_form_for(import_path(@import), html: { class: 'form-horizontal', :method => "put", :id => "import-form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :template_checklist_select, 
                :collection    => TemplateChecklist.all, 
                :label_method  => :description,
                :include_blank => true, 
                :selected      => @template_checklist.id,
                :input_html    => { :id => "template_checklist_select" } %>
    <%= f.file_field :file %>
    <%= f.input :awc_template, label: 'Airworthiness Certification Services Template', as: :boolean %>
  </div>

  <div class="form-actions">
    <%=
         f.button :submit,
                  'Load Template Checklist Items', data: { "disable-with": t('misc.load') } %>

    <%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

    <% if @undo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
    <% end %>

    <% if @redo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
    <% end %>
  </div>
<% end %>
