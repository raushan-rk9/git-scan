<ul class="list-group">
  <li class="list-group-item active">
    <h5><%= t('items.pl_title') %>: <%= @item.name %></h5>
  </li>
  <li class="list-group-item">
    <h6><u>Details:</u></h6>
    <p>
      <strong>Identifier:</strong>
      <%= @item.identifier %><br>
      <strong>Type:</strong>
      <%= Constants::DisplayItemType[@item.itemtype.to_i] if @item.itemtype.present? %><br>
      <strong>Level:</strong>
      <%= @item.level %><br>
      <strong>Project:</strong>
      <%= @project.name %>
    </p>
  </li>
  <li class="list-group-item">
    <h6><u>Navigation:</u></h6>
    <%= link_to "Documents",                       item_documents_path(@item) %><br>
    <%= link_to @item.get_item_title(:high_level), item_high_level_requirements_path(@item) %><br>
    <%= link_to @item.get_item_title(:low_level),  item_low_level_requirements_path(@item) %><br>
    <%= link_to t('misc.model_files'),             item_model_files_path(@item) %><br>
    <%= link_to t('misc.source_code'),             item_source_codes_path(@item) %><br>
    <%= link_to t('misc.test_cases'),              item_test_cases_path(@item) %><br>
    <%= link_to t('misc.test_procedures'),         item_test_procedures_path(@item) %><br>
    <%= link_to t('module_description.pl_title'), item_module_descriptions_path(@item) %><br>
    <%= link_to t('problemreports.pl_title'),      item_problem_reports_path(@item) %><br>
    <%= link_to "Requirements Tracing Matrix",     item_requirements_tracing_path(@item) %><br>
    <%= link_to "Reviews",                         item_reviews_path(@item) %><br>
  </li>
</ul>

<br>
<%= link_to 'Edit',     edit_project_item_path(@project, @item) ,                                        class: 'btn' %>
<%= link_to 'New Item', new_project_item_path(@project),                                                 class: "btn" %>
<%= link_to 'Export',   project_item_export_path(@project, @item) + '?new_window=true', target: :_blank, class: "btn" %>
<%= link_to 'Back',     go_back_path(1),  onclick: 'validateBack(1, this)',                                                                 class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
