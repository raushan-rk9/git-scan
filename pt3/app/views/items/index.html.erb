<h1><%= "#{t('items.pl_title')} #{t('misc.list')}" %></h1>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= t('misc.name') %></th>
      <th class="th-sm"><%= t('misc.ident') %></th>
      <th class="th-sm">Type</th>
      <th class="th-sm">Level</th>
      <th class="th-sm"><%= t('misc.nav') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.identifier %></td>
        <td><%= Constants::DisplayItemType[item.itemtype.to_i] if item.itemtype.present? %></td>
        <td><%= item.level %></td>
        <td>
          <%= link_to "Documents",                       item_documents_path(item) %><br>
          <%= link_to item.get_item_title(:high_level),  item_high_level_requirements_path(item) %><br>
          <%= link_to item.get_item_title(:low_level),   item_low_level_requirements_path(item) %><br>
          <%= link_to t('misc.model_files'),             item_model_files_path(item) %><br>
          <%= link_to t('misc.source_code'),             item_source_codes_path(item) %><br>
          <%= link_to t('misc.test_cases'),              item_test_cases_path(item) %><br>
          <%= link_to t('misc.test_procedures'),         item_test_procedures_path(item) %><br>
          <%= link_to t('module_description.pl_title'),  item_module_descriptions_path(item) %><br>
          <%= link_to t('problemreports.pl_title'),      item_problem_reports_path(item) %><br>
          <%= link_to "Requirements Tracing Matrix",     item_requirements_tracing_path(item) %><br>
          <%= link_to "Reviews",                         item_reviews_path(item) %><br>
        </td>
        <td class="td-centered">
          <% if policy(item).show? %>
            <%= link_to project_item_path(@project, item) do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(item).edit? %>
            <%= link_to [:edit, @project, item] do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(item).destroy? %>
            <%= link_to [@project, item], method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
