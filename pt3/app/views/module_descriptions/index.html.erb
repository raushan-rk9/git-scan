<h1><%= "#{t('module_description.pl_title')} #{t('misc.list')}" %></h1>

<form name="filter" id="filter" class="filter-form" action="<%= item_module_descriptions_path(@item) %>"  method="put">
  <div class="filter-form">
    Field:
    &nbsp;
    <select id="filter_field" name="filter_field" style="width: 25%;">
      <option value="module_description_number">Module Description Number</option>
      <option value="full_id">Full ID</option>
      <option value="description">Description</option>
      <option value="file_name">File Name</option>
      <option value="version">Version</option>
      <option value="revision">Revision</option>
      <option value="draft_revision">Draft Revision</option>
      <option value="revision">Revision Date</option>
      <option value="high_level_requirement_associations"><%= Item.item_type_title(@item, :high_level, :plural) %></option>
      <option value="low_level_requirement_associations"><%= Item.item_type_title(@item, :low_level, :plural) %></option>
      <option value="Item_id">Item ID</option>
      <option value="project_id">Project ID</option>
    </select>

    &nbsp;
    Value:
    &nbsp;
    <input id="filter_value" name="filter_value" value='<%= session[:md_filter_value] %>' type="text" style="width: 25%;">
    &nbsp;
    <input type="submit" value="Filter" style="width: 25%;" class="btn-sm" style="height: 50% !important;" >
  </div>
</form>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">Number</th>
      <th class="th-sm">Full ID</th>
      <th class="th-sm"><%= t('misc.desc') %></th>
      <th class="th-sm"><%= t('misc.filenames') %></th>
      <th class="th-sm">Linked <%= Item.item_type_title(@item, :high_level, :plural) %></th>
      <th class="th-sm">Linked <%= Item.item_type_title(@item, :low_level, :plural) %></th>
      <th class="th-sm"><%= t('versioning.revision') %></th>
      <th class="th-sm"><%= t('versioning.draft_revision') %></th>
      <th class="th-sm"><%= t('document.revdate') %></th>
      <th class="th-sm"><%= t('versioning.versionid') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @module_descriptions.each do |module_description| %>
      <% if module_description.soft_delete %>
        <tr>
          <td style='text-decoration: line-through;' ><%= module_description.module_description_number %></td>
          <td style='text-decoration: line-through;' ><%= module_description.full_id %></td>
          <td style='text-decoration: line-through;' ><%= raw module_description.description %></td>
          <td style='text-decoration: line-through;' ><%= sanitize module_description.get_filenames %></td>
          <td style='text-decoration: line-through;' >
            <% if module_description.high_level_requirements.present? %>
              <% module_description.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' >
            <% if module_description.low_level_requirements.present? %>
              <% @module_description.low_level_requirements.each do |llr| %>
                <%= display_full_id(llr, @item) %><br>
              <% end %>

              <% module_description.low_level_requirements.each do |llr| %>
                <%= link_to llr.fullreqid, item_low_level_requirement_path(@item, llr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' ><%= module_description.revision %></td>
          <td style='text-decoration: line-through;' ><%= module_description.draft_revision %></td>
          <td style='text-decoration: line-through;' ><%= module_description.revision_date %></td>
          <td style='text-decoration: line-through;' ><%= module_description.version %></td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered">
            <% if policy(module_description).destroy? %>
              <%= link_to [@item, module_description], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% else %>
        <tr>
            <% if    policy(module_description).edit? && !session[:archives_visible].present? %>
                    <td><%= link_to module_description.module_description_number, edit_item_module_description_path(@item, module_description)  + '?new_window=true', target: :_blank %></td>
            <% elsif policy(module_description).show? && !session[:archives_visible].present? %>
                    <td><%= link_to module_description.module_description_number, item_module_description_path(@item, module_description)  + '?new_window=true', target: :_blank %></td>
            <% else %>
                    <td><%= module_description.module_description_number %></td>
            <% end %>
          <td><%= module_description.full_id %></td>
          <td><%= raw module_description.description %></td>
          <td><%= sanitize module_description.get_filenames %></td>
          <td>
            <% if module_description.high_level_requirements.present? %>
              <% module_description.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if module_description.low_level_requirements.present? %>
              <% module_description.low_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_low_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td><%= module_description.revision %></td>
          <td><%= module_description.draft_revision %></td>
          <td><%= module_description.revision_date %></td>
          <td><%= module_description.version %></td>
          <td class="td-centered">
            <% if policy(module_description).show? %>
              <%= link_to item_module_description_path(@item, module_description) do %>
                <%= material_icon.zoom_in.md_24 %><br>Show
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(module_description).edit? && !session[:archives_visible].present? %>
              <%= link_to [:edit, @item, module_description] do %>
                <%= material_icon.edit.md_24 %><br>Edit
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(module_description).destroy? && !session[:archives_visible].present? %>
              <%= link_to item_module_description_mark_as_deleted_path(@item, module_description), data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Mark As Deleted
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(module_description).destroy? && !session[:archives_visible].present? %>
              <%= link_to [@item, module_description], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
