<ul class="list-group">
  <li class="list-group-item active">
    <h5>Document Comment <%= @document_comment.commentid %></h5>
  </li>
  <li class="list-group-item">
    <h6>
      <u>
        Details:
      </u>
    </h6>

    <p>
      <strong>Requested By:</strong>
      <%= User.fullname_from_email(@document_comment.requestedby) %><br>
      <strong>Assigned To:</strong>
      <%= User.fullname_from_email(@document_comment.assignedto) %><br>
      <strong>Comment:</strong>
      <%= raw @document_comment.comment %><br>
      <strong>Document:</strong>
      <%= @document_comment.document.name %>
      <strong>Project:</strong>
      <%= @document_comment.project.name %>
      <strong>Item:</strong>
      <%= @document_comment.item.name %>
    </p>
  </li>
</ul>

<%= link_to 'Edit',                 edit_document_document_comment_path(@document, @document_comment), class: 'btn btn-default'  %>
<%= link_to 'New Document Comment', new_document_document_comment_path(@document),                     class: 'btn btn-default' %>
<%= link_to 'Back',                 go_back_path(1),  onclick: 'validateBack(1, this)',                                                   class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>

