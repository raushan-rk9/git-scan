<ul class="list-group">
  <li class="list-group-item active">
    <h5>Review ID: <%= @review.fullreviewid %></h5>
  </li>
  <li class="list-group-item">
    <%= render 'review_summary' %>
  </li>
  <li class="list-group-item">
    <p>
      <h4>Checklist:</h4>
      <br>
      <table width="100%">
        <tr>
          <td width="20el">
          </td>
          <td>
            <%= render 'checklist_index' %>
          </td>
        </tr>
      </table>
    </p>
  </li>
</ul>
<br>

<% if (@review.status != 'Closed') %>
 <%=
      link_to 'Edit Review',
      edit_item_review_path(@item, @review),
      class: "btn btn-primary d-print-none"
  %>
<% end %>

<%=
     link_to 'New Review',
     new_item_review_path(@item),
     class: "btn btn-primary d-print-none"
 %>

<% if @review.checklist_item.present? %>
  <%=
       link_to 'Consolidated Checklist',
       review_consolidated_checklist_path(@review),
       class: "btn btn-primary d-print-none"
   %>
<% end %>

<%=
     link_to 'Sign-In Sheet',
     review_sign_in_path(@review),
     class: "btn btn-primary d-print-none"
 %>

<%=
      link_to 'Back',
      go_back_path(1),  onclick: 'validateBack(1, this)',
      class: 'btn'
 %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%=
       link_to 'Undo',
       @undo_path,
       class: 'btn btn-default'
   %>
<% end %>
