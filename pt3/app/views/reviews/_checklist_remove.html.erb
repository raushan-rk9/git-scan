<%= simple_form_for( [@review.item, @review], :url => { :action => "cl_removeall" }, html: { class: 'form-horizontal', :method => "put" } ) do |f| %>
  <%= f.error_notification %>
  <% if @review.present? && @review.errors.present? && @review.errors.messages.present? %>
    <% @review.errors.messages.each do |field, messages| %>
      <h4 style="color: red;">
        <%= field.to_s.titleize %>:
        <% messages.each do |message| %>
          <%= message %>&nbsp;
        <% end %>
        <br>
      </h4>
    <% end %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :removeallclitems, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { "disable-with": t('misc.save'), confirm: 'WARNING: This will delete all existing checklist items. Are you sure you want to do this?' } %>
  </div>
<% end %>
