<h1>System Requirements <%= t('misc.list') %></h1>

<form name="filter" id="filter" class="filter-form" action="<%= project_system_requirements_path(@project) %>"  method="put">
  <div class="filter-form">
    Field:
    &nbsp;
    <select id="filter_field" name="filter_field" style="width: 25%;">
      <option value="full_id">Requirement ID</option>
      <option value="description" selected=true >Description</option>
      <option value="derived">Derived</option>
      <option value="derived_justification">Derived Justification</option>
      <option value="category">Category</option>
      <option value="verification_method">Verification Method</option>
      <option value="source">Source</option>
      <option value="safety">Safety</option>
      <option value="implementation">Implementation</option>
      <option value="version">Version</option>
    </select>
    &nbsp;
    Value:
    &nbsp;
    <input id="filter_value" name="filter_value" value='<%= session[:sr_filter_value] %>' type="text" style="width: 25%;">
    &nbsp;
    <input type="submit" value="Filter" style="width: 25%;" class="btn-sm" style="height: 50% !important;" >
  </div>
</form>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">Requirement Number</th>
      <th class="th-sm"><%= t('requirements.id') %></th>
      <th class="th-sm">Requirement Description</th>
      <th class="th-sm">Requirement Source</th>
      <th class="th-sm">Safety Related?</th>
      <th class="th-sm">Derived</th>
      <th class="th-sm">Implementation</th>
      <th class="th-sm"><%= t('misc.model_file') %></th>
      <th class="th-sm"><%= t('versioning.versionid') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @system_requirements.each do |system_requirement| %>
      <% if system_requirement.soft_delete %>
        <tr>
          <td style='text-decoration: line-through;' ><%= system_requirement.reqid %></td>
          <td style='text-decoration: line-through;' ><%= system_requirement.fullreqid %></td>
          <td style='text-decoration: line-through;' ><%= system_requirement.description.to_s.html_safe %></td>
          <td style='text-decoration: line-through;' ><%= system_requirement.source %></td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= checkicon(system_requirement.safety) %></td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= checkicon(system_requirement.derived) %></td>
          <td style='text-decoration: line-through;' ><%= system_requirement.implementation %></td>

          <% if system_requirement.model_file.try(:description) %>
            <td style='text-decoration: line-through;' >
              <%= system_requirement.model_file.try(:description) %>
            </td>
          <% elsif system_requirement.document.try(:name) %>
            <td style='text-decoration: line-through;' >
              <%= system_requirement.document.try(:name) %>
            </td>
          <% else %>
            <td>
            </td>
          <% end %>

          <td class="td-centered" style='text-decoration: line-through;' ><%= system_requirement.version %></td>
          </td>
          <td style='text-decoration: line-through;' >
          </td>
          <td class="td-centered">
          </td>
          <td class="td-centered">
          </td>
          <td class="td-centered">
            <% if policy(system_requirement).destroy? %>
              <%= link_to [@project, system_requirement], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= system_requirement.reqid %></td>
          <% if policy(system_requirement).edit? && !session[:archives_visible].present? %>
            <td><%= link_to system_requirement.fullreqid, edit_project_system_requirement_path(@project, system_requirement)  + '?new_window=true', target: :_blank %></td>
          <% elsif policy(system_requirement).show? && !session[:archives_visible].present? %>
            <td><%= link_to system_requirement.fullreqid, project_system_requirement_path(@project, system_requirement)  + '?new_window=true', target: :_blank %></td>
          <% else %>
            <td><%= system_requirement.fullreqid %></td>
          <% end %>
          <td>
            <%= system_requirement.description.to_s.html_safe %>

            <% if system_requirement.model_file_id.present? && system_requirement.model_file.upload_file.attached? %>
              <%= link_to image_tag(system_requirement.model_file.upload_file, :size => '25%xauto'), item_model_file_display_path(system_requirement.model_file.item_id, system_requirement.model_file) + '?new_window=true', target: :_blank %>
            <% elsif system_requirement.document_id.present? && system_requirement.document.file.attached? %>
              <%= link_to image_tag(system_requirement.document.file, :size => '25%xauto'), item_document_display_path(system_requirement.document.item_id, system_requirement.document) + '?new_window=true', target: :_blank %>
            <% end %>
          </td>
          <td><%= system_requirement.source %></td>
          <td class="td-centered"><%= checkicon(system_requirement.safety) %></td>
          <td class="td-centered"><%= checkicon(system_requirement.derived) %></td>
          <td><%= system_requirement.implementation %></td>

          <% if system_requirement.model_file.try(:description) %>
            <td>
              <%= link_to system_requirement.model_file.try(:description),
                  item_model_file_path(system_requirement.model_file.item_id, system_requirement.model_file) %>
            </td>
          <% elsif system_requirement.document.try(:name) %>
            <td>
              <%= link_to system_requirement.document.try(:name),
                  url_for(system_requirement.document) %>
            </td>
          <% else %>
            <td>
            </td>
          <% end %>
            
          <td class="td-centered"><%= system_requirement.version %></td>
          </td>
          <td>
            <% if policy(system_requirement).show? %>
              <%= link_to project_system_requirement_path(@project, system_requirement) do %>
                <%= material_icon.zoom_in.md_24 %><br>Show
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(system_requirement).edit? && !session[:archives_visible].present? %>
              <%= link_to [:edit, @project, system_requirement] do %>
                  <%= material_icon.edit.md_24 %><br>Edit
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(system_requirement).destroy? && !session[:archives_visible].present? %>
              <%= link_to project_system_requirement_mark_as_deleted_path(@project, system_requirement), data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Mark As Deleted
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(system_requirement).destroy? && !session[:archives_visible].present? %>
              <%= link_to [@project, system_requirement], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

