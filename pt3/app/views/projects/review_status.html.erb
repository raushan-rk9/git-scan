<h2><%= "Review Status for #{@project.name}" %></h2>
<hr style="background:#000000; border:0; height:1px" />
<p>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
    <thead>
        <tr>
        <th class="th-sm">Item ID</th>
        <th class="th-sm">Review ID</th>
        <th class="th-sm">Review Type</th>
        <th class="th-sm">Title</th>
        <th class="th-sm">Description</th>
        <th class="th-sm">Review Passing</th>
        <th class="th-sm">Number of Checklist Items Not Passing</th>
        <th class="th-sm">Open AI</th>
        <th class="th-sm">Status</th>
        <th class="th-sm"></th>
        </tr>
    </thead>

    <tbody>
    <% @project.items.each do |proj_item| %>

        <% if proj_item.reviews.any? %>

                <% proj_item.reviews.each do |review| %>
                <tr>
                    <td><%= Item.identifier_from_id(review.item_id) %></td>
                    <td>
                      <%= link_to review.title, review_path(review) %>
                    </td>
                    <td><%= review.reviewtype %></td>
                    <td><%= review.title %></td>
                    <td><%= sanitize review.description %></td>
                    <td><%= review.checklistitems_passing ? "Yes" : "No" %></td>
                    <td><%= "#{review.checklistitems_failingnumber + review.checklistitems_neithernumber} of #{review.checklistitems_assigned}" %></td>
                    <td><%= review.actionitems_open %></td>
                    </td>
                    <td>
                      <% if review.status == 'Closed' %>
                          <%= material_icon.lock.md_24 %><br>
                      <% else %>
                        <%= link_to review_close_url(review) do %>
                          <%= material_icon.done.md_24 %><br>
                        <% end %>
                      <% end %>
                    </td>
                </tr>
                <% end %>
        <% end %>
    <% end %>
    </tbody>
    </table>
</p>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn btn-default' %>

<script>
  $( document ).ready(function() {
    if (document.cookie.match(/scrollTop=(\d+)/))
      $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

    $('#scrollableDataTable').DataTable({
    "sDom":           "Rlfrtip",
    "scrollX":        true,
    "scrollY":        "55vh",
    "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
    "pageLength":     -1,
    "scrollCollapse": true,
    "paging":         false,
    "ordering":       true,
    "info":           false,
    });
  });

  $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});
</script>