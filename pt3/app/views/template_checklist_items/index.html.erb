<h1>Template Checklist Items <%= t('misc.list') %>

<% if @template_checklist.try(:title) %>
  <br>for <%= @template_checklist.title %></h1>
<% end %>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">Item ID</th>
      <th class="th-sm">Checklist Item Description</th>
      <th class="th-sm">DALs</th>
      <th class="th-sm">Reference</th>
      <th class="th-sm">Supplements</th>
      <th class="td-centered">Status</th>
      <th class="th-sm">Notes</th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @template_checklist_items.each do |template_checklist_item| %>
      <tr>
        <td><%= template_checklist_item.clitemid %></td>
        <td><%= sanitize template_checklist_item.description %></td>
        <td><%= template_checklist_item.minimumdal.join("\n") %></td>
        <td><%= template_checklist_item.reference %></td>
        <td><%= template_checklist_item.supplements.join("\n") %></td>
        <td class="td-centered">
          <% if TemplateChecklistItem.column_names.include?('status') %>
            <%= template_checklist_item.status %>
          <% else %>
            <%= template_checklist_item.passing %>
          <% end %>
        </td>
        <td><%= template_checklist_item.note %></td>
        <td class="td-centered">
          <% if policy(template_checklist_item).show? %>
            <%= link_to template_template_checklist_template_checklist_item_path(@template, @template_checklist, template_checklist_item, awc: params[:awc]) do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(template_checklist_item).edit? %>
            <%= link_to edit_template_template_checklist_template_checklist_item_path(@template, @template_checklist, template_checklist_item, awc: params[:awc]) do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(template_checklist_item).destroy? %>
            <%= link_to template_template_checklist_template_checklist_item_path(@template, @template_checklist, template_checklist_item, awc: params[:awc]), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%=
  link_to 'New Template Checklist Item',
          new_template_template_checklist_template_checklist_item_path(@template,
                                                                       @template_checklist,
                                                                       awc: params[:awc]),
          class: "btn btn-primary"
%>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>
<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
<script>
  if (document.cookie.match(/scrollTop=(\d+)/))
    $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

  $(document).ready
  (
    function()
    {
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("template_checklist_items_table_order"))
        sortOrder = Cookies.get("template_checklist_items_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "sDom":           "Rlfrtip",
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
       );

      $('[name=filter_field]').val('<%= session[:sr_filter_field] %>');
      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("template_checklist_items_table_order");

      function get_order(force)
      {
        if (!Cookies.get("template_checklist_items_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('template_checklist_items_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("template_checklist_items_table_order") ;
        }
      }
    }
  );
</script>