<ul class="list-group">
  <li class="list-group-item active">
<h5>Template Checklist Item ID: <%= @template_checklist_item.clitemid %></h5>
  </li>
  <li class="list-group-item">
  </li>
  <li class="list-group-item">
    <h6><u>Details:</u></h6>
    <p>
      <strong>Title:</strong>
      <%= @template_checklist_item.title %><br>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @template_checklist_item.description.to_s.html_safe %>
    </p>
    <p>
      <strong>Reference:</strong>
      <%= @template_checklist_item.reference.to_s.html_safe %>
    </p>
    <p>
      <strong>DALs:</strong><br>
      <% @template_checklist_item.minimumdal.each do |dal| %>
         <% if dal.present? %>
            &nbsp&nbsp<%= dal.to_s.html_safe %><br>
         <% end %>
      <% end %>
    </p>
    <p>
      <strong>Supplements:</strong><br>
      <% @template_checklist_item.supplements.each do |supplement| %>
         <% if supplement.present? %>
            &nbsp&nbsp<%= supplement.to_s.html_safe %><br>
         <% end %>
      <% end %>
    </p>
    <p>
      <strong>Status:</strong>
      <%= @template_checklist_item.status.to_s.html_safe %>
    </p>
    <p>
      <strong>Note:</strong>
      <%= @template_checklist_item.note.to_s.html_safe %>
    </p>
  </li>
</ul>

<br>

<% if policy(@template_checklist_item).edit? && @template_checklist_item.id %>
  <%=
      link_to 'Edit Template Checklist Item',
              edit_template_template_checklist_template_checklist_item_path(@template,
                                                                            @template_checklist,
                                                                            @template_checklist_item,
                                                                            awc: params[:awc]),
              class: 'btn btn-default'
    %>
<% end %>

<%=
  link_to 'New Template Checklist Item',
          new_template_template_checklist_template_checklist_item_path(@template,
                                                                       @template_checklist,
                                                                       awc: params[:awc]),
          class: "btn btn-primary"
%>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>
<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
