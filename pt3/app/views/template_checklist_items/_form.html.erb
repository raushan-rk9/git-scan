<%= simple_form_for([ @template, @template_checklist, @template_checklist_item ], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :clitemid, label: 'Checklist ID' %>
    <%= f.input :title, as: :hidden %>
    <%= f.input :description, label: 'Checklist Item Description', as: :summernote %>
    <%= f.input :reference %>
    <%=
        f.input :minimumdal, label: 'DALs',
                collection: Constants::Review_Dals,
                input_html: { multiple: true },
                include_blank: true
    %>
    <%=
        f.input :supplements,
                collection: Constants::Review_Supplements,
                input_html: { multiple: true },
                include_blank: true
    %>
    <% if TemplateChecklistItem.column_names.include?('status') %>
      <%=
          f.input :status,
                  as:         :hidden,
                  collection: [
                                ['Pass', 'Pass'] ,
                                ['Fail', 'Fail'],
                                ['N/A', 'N/A']
                              ],
                  include_blank: true
      %> 
    <% else %>
      <%= f.input :passing %>
      <%= f.input :failing %>
    <% end %>
    <%= f.input :note, as: :hidden %>
    <%= f.input :source %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { "disable-with": t('misc.save') } %>

    <% if @template_checklist_item.id.present? %>
      <%=
          link_to 'Show',
                  template_template_checklist_template_checklist_item_path(@template,
                                                                           @template_checklist,
                                                                           @template_checklist_item,
                                                                           awc: params[:awc]),
                  class: 'btn btn-default'
      %>
    <% end %>

    <%=
      link_to 'New Template Checklist Item',
              new_template_template_checklist_template_checklist_item_path(@template,
                                                                           @template_checklist,
                                                                           awc: params[:awc]),
              class: "btn btn-primary"
    %>

    <%= link_to 'Back', 'javascript:null', class: "btn", onclick: 'validateBack(1)' %>

    <% if @undo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
    <% end %>
    <% if @redo_path.present? && !session[:archives_visible].present? %>
      <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
    <% end %>
  </div>
<% end %>
