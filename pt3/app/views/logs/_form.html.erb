<%= simple_form_for(@log) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :error_time, as: :datetime, html5: true %>
    <%= f.input :log_contents, as: :summernote %>
    <%= f.input :log_type %></td>
    <%= f.input :log_id %></td>
    <%= f.input :log_sha %></td>
    <%= f.input :raw_line, as: :summernote %>
  </div>

  <div class="form-actions">
    <% if controller.action_name == 'new' %>
      <input id='update_log' name='update_log' value='Create Log Entry' type="button" onclick='validate();' class="btn btn-default" />
    <% else %>
      <input id='update_log' name='update_log' value='Update Log Entry' type="button" onclick='validate();' class="btn btn-default" />
    <% end %>

    <% if @problem_report.id.present? && @log.present? %>
      <%= link_to 'Show', log_path(@log, @log.id), class: 'btn btn-default'  %>
    <% end %>

    <% unless controller.action_name == "new" %>
      <%= link_to 'New log',   new_log_path(@project), class: "btn" %>
    <% end %>

    <%= link_to 'Back', 'javascript:null', class: "btn", onclick: 'goBack(1)' %>
  </div>
<% end %>
<script>
  function goBack(count)
  {
    validateBack(count);
  }
</script>
