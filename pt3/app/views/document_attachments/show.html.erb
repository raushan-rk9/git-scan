<ul class="list-group">
  <li class="list-group-item active">
    <h5>
      <%= "Document: #{@document_attachment.document.name}" %>
    </h5>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Item:</strong>
      <%= @document_attachment.item.name %>
    </p>
    
    <p>
      <strong>Project:</strong>
      <%= @document_attachment.project.name %>
    </p>
    
    <p>
      <strong>User:</strong>
      <%= @document_attachment.user %>
    </p>
    
    <% if @document_attachment.file.attached? then %>
    <p>
      <strong>File:</strong>
      <%= link_to @document_attachment.file.filename, url_for(@document_attachment.file) %><br>
      <strong>Uploaded At: </strong><%= @document_attachment.upload_date %>
    </p>
    <% end %>
  </li>
</ul>

<%= link_to 'Edit', edit_document_document_attachment_path(@document, @document_attachment), class: 'btn' %>
<%= link_to 'New Document Attachment', new_document_document_attachment_path(@document),     class: 'btn' %>
<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)',                                                         class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path,                                                            class: 'btn' %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path,                                                            class: 'btn' %>
<% end %>

