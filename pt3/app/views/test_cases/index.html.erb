                                        <% else %>
                                                <td><%= test_case.fullcaseid %></td>
                                        <% end %>
          <td>
            <%= sanitize test_case.description %>

            <% if test_case.model_file_id.present? && test_case.model_file.upload_file.attached? %>
              <%= link_to image_tag(test_case.model_file.upload_file, :size => '25%xauto'), item_model_file_display_path(test_case.model_file.item_id, test_case.model_file) + '?new_window=true', target: :_blank %>
            <% elsif test_case.document_id.present? && test_case.document.file.attached? %>
              <%= link_to image_tag(test_case.document.file), item_document_display_path(@item, test_case.document) + '?new_window=true', target: :_blank  %>
            <% end %>
          </td>
          <td><%= raw test_case.procedure %></td>
          <td class="td-centered"><%= checkicon(test_case.robustness) %></td>
          <td>
            <% if test_case.low_level_requirements.present? %>
              <% test_case.low_level_requirements.each do |llr| %>
                <%= link_to llr.fullreqid, item_low_level_requirement_path(@item, llr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if test_case.high_level_requirements.present? %>
              <% test_case.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <% if test_case.model_file.try(:description) %>
            <td>
              <%= link_to test_case.model_file.try(:description),
                  item_model_file_path(@item, test_case.model_file) + '?new_window=true', target: :_blank %>
            </td>
          <% elsif test_case.document.try(:name) %>
            <td>
              <%= link_to test_case.document.try(:name),
                  url_for(test_case.document_id) + '?new_window=true', target: :_blank %>
            </td>
          <% else %>
            <td>
            </td>
          <% end %>

          <td class="td-centered">
            <% if test_case.test_procedures.present? %>
              <% test_case.test_procedures.each do |tp| %>
                <%= link_to tp.full_id, item_test_procedure_path(@item, tp.id) + '?new_window=true', target: :_blank %><br>
                <br>
              <% end %>
            <% end %>
          </td>

          <td><%= test_case.version %></td>
          <td class="td-centered">
            <% if policy(test_case).show? %>
              <%= link_to item_test_case_path(@item, test_case) do %>
                <%= material_icon.zoom_in.md_24 %><br>Show
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_case).edit? && !session[:archives_visible].present? %>
              <%= link_to [:edit, @item, test_case] do %>
                <%= material_icon.edit.md_24 %><br>Edit
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_case).destroy? && !session[:archives_visible].present? %>
              <%= link_to item_test_case_mark_as_deleted_path(@item, test_case), data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Mark As Deleted
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_case).destroy? && !session[:archives_visible].present? %>
              <%= link_to [@item, test_case], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

