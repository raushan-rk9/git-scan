<h1><%= "#{t('misc.test_cases')} #{t('misc.list')}" %></h1>

<form name="filter" id="filter" class="filter-form" action="<%= item_test_cases_path(@item) %>"  method="put">
  <div class="filter-form">
    Field:
    &nbsp;
    <select id="filter_field" name="filter_field" style="width: 25%;">
      <option value="full_id">Test Case ID</option>
      <option value="description">Purpose</option>
      <option value="procedure">Decription</option>
      <option value="derived">Derived</option>
      <option value="testmethod">Test Method</option>
      <option value="test_proceedures">Test Proceedures</option>
      <option value="version">Version</option>
      <option value="test_procedure_associations"><%= Item.item_type_title(@item, :high_level, :plural) %></option>
      <option value="derived_justification">Derived Justification</option>
    </select>

    &nbsp;
    Value:
    &nbsp;
    <input id="filter_value" name="filter_value" value='<%= session[:tc_filter_value] %>' type="text" style="width: 25%;">
    &nbsp;
    <input type="submit" value="Filter" style="width: 25%;" class="btn-sm" style="height: 50% !important;" >
  </div>
</form>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= t('testcases.caseid') %></th>
      <th class="th-sm">Purpose</th>
      <th class="th-sm"><%= t('misc.desc') %></th>
      <th class="th-sm"><%= t('hlrs.robust') %></th>
      <th class="th-sm">Linked <%= Item.item_type_title(@item, :low_level, :plural) %></th>
      <th class="th-sm">Linked <%= Item.item_type_title(@item, :high_level, :plural) %></th>
      <th class="th-sm">Linked <%= t('misc.model_file') %></th>
      <th class="th-sm">Linked <%= t('misc.test_procedures') %></th>
      <th class="th-sm"><%= t('versioning.versionid') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_cases.each do |test_case| %>
      <% if test_case.soft_delete %>
        <tr>
          <td style='text-decoration: line-through;' ><%= test_case.fullcaseid %></td>
          <td style='text-decoration: line-through;' ><%= sanitize test_case.description %></td>
          <td style='text-decoration: line-through;' ><%= raw test_case.description %></td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= checkicon(test_case.robustness) %></td>
          <td style='text-decoration: line-through;' >
            <% if test_case.low_level_requirements.present? %>
              <% test_case.low_level_requirements.each do |llr| %>
                <%= link_to llr.fullreqid, item_low_level_requirement_path(@item, llr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' >
            <% if test_case.high_level_requirements.present? %>
              <% test_case.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' >
          <% if test_case.model_file.try(:description) %>
            <td style='text-decoration: line-through;' >
              <%= test_case.model_file.try(:description) %>
            </td>
          <% elsif test_case.document.try(:name) %>
            <td style='text-decoration: line-through;' >
              <%= test_case.document.try(:name) %>
            </td>
          <% else %>
            <td>
            </td>
          <% end %>

          <td style='text-decoration: line-through;' >
            <% if test_case.test_procedures.present? %>
              <% test_case.test_procedures.each do |tp| %>
                <%= link_to tp.full_id, item_test_procedure_path(@item, tp.id) + '?new_window=true', target: :_blank %><br>
                <br>
              <% end %>
            <% end %>
          </td>

          <td style='text-decoration: line-through;' ><%= test_case.version %></td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered">
            <% if policy(test_case).destroy? %>
              <%= link_to [@item, test_case], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% else %>
        <tr>
                                        <% if    policy(test_case).edit? && !session[:archives_visible].present? %>
