<ul class="list-group">
  <li class="list-group-item active">
    <h5>
      <%= "#{t('test_procedures.procedure_id') }: #{@test_procedure.full_procedure_id}" %>
    </h5>
  </li>
  <li class="list-group-item">
    <p>
      <strong><%= t('misc.desc') %>:</strong>
      <%= raw @test_procedure.description %>
    </p>

    <p>
      <strong><%= t('misc.filename') %>:</strong>
      <%= @test_procedure.file_name %>
    </p>

    <p>
      <strong><%= t('misc.url') %>:</strong>
      <% if @test_procedure.url_type.present? && @test_procedure.url_link.present? %>
        <% if @test_procedure.url_type == 'ATTACHMENT' && @test_procedure.upload_file.attached? %>
          <%= link_to @test_procedure.upload_file.filename, url_for(@test_procedure.upload_file) + '?new_window=true', target: :_blank %>
        <% else %>
          <% description = @test_procedure.url_description %>

          <% unless description.present? %>
            <% description = @test_procedure.url_link %>
          <% end %>

          <% if @test_procedure.url_link =~ /^http[s]{0,1}:\/\/.+$/ %>
            <%= link_to description, @test_procedure.url_link + '?new_window=true', target: :_blank %>
          <% else %>
            <%= description %>
          <% end %>
        <% end %>
      <% end %>
    </p>

    <p>
      <strong>Linked <%= t('misc.test_cases') %>:</strong><br>
      <% @test_procedure.test_cases.each do |tc| %>
        <%= display_full_id(tc, @item) %><br>
      <% end %>
    </p>

    <p>
      <strong><%= t('versioning.versionid') %>:</strong>
      <%= @test_procedure.version %>
    </p>

    <p>
      <strong>Item:</strong>
      <%= @test_procedure.item.name %>
    </p>

    <p>
      <strong>Project:</strong>
      <%= @test_procedure.project.name %>
    </p>
    </p>
  </li>
</ul>

<% unless session[:archives_visible].present? %>
  <%= link_to 'Edit', edit_item_test_procedure_path(@item, @test_procedure), class: 'btn btn-default' %>
  <%= link_to 'New Test Procedure', new_item_test_procedure_path(@item),      class: "btn btn-primary", style: "color:white" %>
<% end %>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>

<%
    if @test_procedure_ids.present?
      current_index = @test_procedure_ids.find_index(@test_procedure.id)
      previous_id   = @test_procedure_ids[current_index - 1] if current_index > 0
      next_id       = @test_procedure_ids[current_index + 1] if current_index < (@test_procedure_ids.length - 1)
    end
 %>

<% if previous_id.present? %>
  <% if (params[:previous_mode] == 'editing') && policy(@test_procedure).edit? %>
    <%= link_to('Previous', edit_item_test_procedure_path(@item, previous_id), class: 'btn btn-default') %>
  <% else %>
    <%= link_to('Previous', item_test_procedure_path(@item, previous_id),      class: 'btn btn-default') %>
  <% end %>
<% end %>

<% if next_id.present? %>
  <% if (params[:previous_mode] == 'editing') && policy(@test_procedure).edit? %>
    <%= link_to('Next',     edit_item_test_procedure_path(@item, next_id),     class: 'btn btn-default') %>
  <% else %>
    <%= link_to('Next',     item_test_procedure_path(@item, next_id),          class: 'btn btn-default') %>
  <% end %>
<% end %>
