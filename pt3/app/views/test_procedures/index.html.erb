<h1><%= "#{t('misc.test_procedure')} #{t('misc.list')}" %></h1>

<form name="filter" id="filter" class="filter-form" action="<%= item_test_procedures_path(@item) %>"  method="put">
  <div class="filter-form" >
    Field:
    &nbsp;
    <select id="filter_field" name="filter_field" style="width: 25%;">
      <option value="full_id">Test Procedure ID</option>
      <option value="description">Description</option>
      <option value="file_name">File Name</option>
      <option value="version">Version</option>
      <option value="test_case_associations"><%= t('misc.test_cases') %></option>
      <option value="url_type">URL Type</option>
      <option value="url_link">URL Link</option>
      <option value="url_description">URL Description</option>
    </select>
    &nbsp;
    Value:
    &nbsp;
    <input id="filter_value" name="filter_value" value='<%= session[:tp_filter_value] %>' type="text" style="width: 25%;">
    &nbsp;
    <input type="submit" value="Filter" style="width: 25%;" class="btn-sm" style="height: 50% !important;" >
  </div>
</form>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= t('test_procedures.procedure_id') %></th>
      <th class="th-sm"><%= t('misc.desc') %></th>
      <th class="th-sm"><%= t('misc.filename') %></th>
      <th class="th-sm"><%= t('misc.url') %></th>
      <th class="th-sm">Linked <%= t('misc.test_cases') %></th>
      <th class="th-sm"><%= t('versioning.versionid') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_procedures.each do |test_procedure| %>
      <% if test_procedure.soft_delete %>
        <tr>
          <td style='text-decoration: line-through;' ><%= test_procedure.full_procedure_id %></td>
          <td style='text-decoration: line-through;' ><%= raw test_procedure.description %></td>
          <td style='text-decoration: line-through;' ><%= test_procedure.file_name %></td>
          <td style="text-decoration: line-through; max-width: 200px !important; word-wrap: break-word !important;">
            <% if test_procedure.url_type.present? && test_procedure.url_link.present? %>
              <%= link_to test_procedure.url_link, item_test_procedure_download_path(@item, test_procedure) + '?new_window=true', target: :_blank %>
            <% else %>
              <%= test_procedure.file_name %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' >
            <% if test_procedure.test_cases.present? %>
              <% test_procedure.test_cases.each do |tc| %>
                <%= link_to tc.full_id, item_test_case_path(@item, tc.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= test_procedure.version %></td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
          </td>
          <td class="td-centered">
            <% if policy(test_procedure).destroy? %>
              <%= link_to [@item, test_procedure], method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% else %>
        <tr>
					<% if    policy(test_procedure).edit? && !session[:archives_visible].present? %>
						<td><%= link_to test_procedure.full_procedure_id, edit_item_test_procedure_path(@item, test_procedure)  + '?new_window=true', target: :_blank %></td>
					<% elsif policy(test_procedure).show? && !session[:archives_visible].present? %>
						<td><%= link_to test_procedure.full_procedure_id, item_test_procedure_path(@item, test_procedure)  + '?new_window=true', target: :_blank %></td>
					<% else %>
						<td><%= test_procedure.full_procedure_id %></td>
					<% end %>
          <td><%= raw test_procedure.description %></td>
          <td><%= test_procedure.file_name %></td>
          <td style="max-width: 200px !important; word-wrap: break-word !important;">
            <% if test_procedure.url_type.present? && test_procedure.url_link.present? %>
              <%= link_to test_procedure.url_link, item_test_procedure_download_path(@item, test_procedure) + '?new_window=true', target: :_blank %>
            <% else %>
              <%= test_procedure.file_name %>
            <% end %>
          </td>
          <td>
            <% if test_procedure.test_cases.present? %>
              <% test_procedure.test_cases.each do |tc| %>
                <%= link_to tc.full_id, item_test_case_path(@item, tc.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>
          <td class="td-centered"><%= test_procedure.version %></td>
          <td class="td-centered">
            <% if policy(test_procedure).show? %>
              <%= link_to item_test_procedure_path(@item, test_procedure) do %>
                <%= material_icon.zoom_in.md_24 %><br>Show
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_procedure).edit? && !session[:archives_visible].present? %>
              <%= link_to [:edit, @item, test_procedure] do %>
                <%= material_icon.edit.md_24 %><br>Edit
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_procedure).destroy? && !session[:archives_visible].present? %>
              <%= link_to item_test_procedure_mark_as_deleted_path(@item, test_procedure), data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Mark As Deleted
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
          <td class="td-centered">
            <% if policy(test_procedure).destroy? && !session[:archives_visible].present? %>
              <%= link_to [@item, test_procedure], method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

