<h1>Problem Report Attachments <%= t('misc.list') %></h1>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= t('files.link') %></th>
      <th class="th-sm"><%= t('problemreports.single_title') %></th>
      <th class="th-sm"><%= t('user.single_title') %></th>
      <th class="th-sm"><%= t('files.upat') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @problem_report_attachments.each do |problem_report_attachment| %>
      <tr>
        <td>
          <% if problem_report_attachment.link_type.present? && problem_report_attachment.link_link.present? %>
            <% if problem_report_attachment.link_type == 'ATTACHMENT' && problem_report_attachment.file.attached? %>
              <%= link_to problem_report_attachment.file.filename, problem_report_problem_report_attachment_get_attachment_url(problem_report_attachment.problem_report_id, problem_report_attachment) + '?new_window=true', target: :_blank %>
            <% else %>
              <% description = problem_report_attachment.link_description %>

              <% unless description.present? %>
                <% description = problem_report_attachment.link_link %>
              <% end %>

              <% if problem_report_attachment.link_link =~ /^http[s]{0,1}:\/\/.+$/ %>
                <%= link_to description, problem_report_attachment.link_link + '?new_window=true', target: :_blank %>
              <% else %>
                <%= description %>
              <% end %>
            <% end %>
          <% end %>
        </td>
        <td><%= problem_report_attachment.problem_report.fullprid %></td>
        <td><%= problem_report_attachment.user %></td>
        <td><%= problem_report_attachment.created_at %></td>
        <td class="td-centered">
          <% if policy(problem_report_attachment).show? %>
            <%= link_to problem_report_problem_report_attachment_path(@problem_report, problem_report_attachment) do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(problem_report_attachment).edit? %>
            <%= link_to edit_problem_report_problem_report_attachment_path(@problem_report, problem_report_attachment) do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(problem_report_attachment).destroy? %>
            <%= link_to problem_report_problem_report_attachment_path(@problem_report, problem_report_attachment), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem Report Attachment', new_problem_report_problem_report_attachment_path(@problem_report), class: 'btn btn-default'  %>
<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>
<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
<script>
  $(document).ready
  (
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("problem_report_attachments_table_order"))
        sortOrder = Cookies.get("problem_report_attachments_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
      );

      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("problem_report_attachments_table_order");

      function get_order(force)
      {
        if (!Cookies.get("problem_report_attachments_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('problem_report_attachments_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("problem_report_attachments_table_order") ;
        }
      }
    }
  );
</script>