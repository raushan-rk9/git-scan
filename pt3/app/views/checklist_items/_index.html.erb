<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">ID</th>
      <th class="th-sm">Description</th>
      <th class="th-sm">Applicable DAL</th>
      <th class="th-sm">Reference</th>
      <th class="th-sm">Status</th>
      <th class="th-sm">Supplements</th>
      <th class="th-sm">Notes</th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklist_items.each do |checklist_item| %>
      <tr>
        <td><%= checklist_item.clitemid %></td>
        <td><%= checklist_item.description %></td>
        <td class="td-centered"><%= checklist_item.minimumdal %></td>
        <td class="td-centered"><%= checklist_item.reference %></td>
        <% if ChecklistItem.column_names.include?('status') %>
          <td class="td-centered"><%= checklist_item.status %></td>
        <% else %>
          <td class="td-centered"><%= checklist_item.passing %></td>
        <% end %>
        <td><%= checklist_item.supplements.join("\n") %></td>
        <td><%= checklist_item.note %></td>
        <td class="td-centered">
          <% if policy(checklist_item).show? %>
            <%= link_to checklist_item do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(checklist_item).edit? %>
            <%= link_to [:edit, checklist_item] do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(checklist_item).destroy? %>
            <%= link_to checklist_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(document).ready
  (
    function()
    {
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("checklist_table_order"))
        sortOrder = Cookies.get("checklist_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
      );

      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("checklist_table_order");

      function get_order(force)
      {
        if (!Cookies.get("checklist_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('checklist_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("checklist_table_order") ;
        }
      }
    }
  );
</script>