<% if params[:awc] %>
  <h1>ACS Template Documents <%= t('misc.list') %></h1>
<% else %>
  <h1>Organization Template Documents <%= t('misc.list') %></h1>
<% end %>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">Template Document ID</th>
      <th class="th-sm">Title</th>
      <th class="th-sm">Description</th>
      <th class="th-sm">Document Type</th>
      <th class="th-sm">Document Class</th>
      <th class="th-sm">Notes</th>
      <th class="th-sm">File</th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @template_documents.each do |template_document| %>
      <tr>
        <td><%= template_document.document_id %></td>
        <td><%= template_document.title %></td>
        <td><%= sanitize template_document.description %></td>
        <td><%= template_document.document_type %></td>
        <td><%= template_document.document_class %></td>
        <td><%= template_document.notes %></td>
        <td>
        <% if template_document.file.attached? %>
          <%= link_to template_document.file.filename, url_for(template_document.file) %>
        <% end %>
        </td>

        <td class="td-centered">
          <% if policy(template_document).show? %>
            <%= link_to template_template_document_path(template_document.template_id, template_document, awc: params[:awc]) do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(template_document).edit? %>
            <%= link_to edit_template_template_document_path(template_document.template_id, template_document, awc: params[:awc]) do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(template_document).destroy? %>
            <%= link_to template_template_document_path(template_document.template_id, template_document, awc: params[:awc]), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if template_document.file.attached? %>
            <%= link_to template_template_document_download_path(template_document.template_id, template_document) do %>
              <%= material_icon.get_app.md_24 %><br>Download
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @template.present? %>
  <%=
      link_to 'New Template Document',
              new_template_template_document_path(@template,
                                                   awc: params[:awc]),
              class: "btn btn-primary"
  %>

  <%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>
<% end %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>
<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
<script>
  if (document.cookie.match(/scrollTop=(\d+)/))
    $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

  $(document).ready
  (
    function()
    {
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("template_documents_table_order"))
        sortOrder = Cookies.get("template_documents_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "sDom":           "Rlfrtip",
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
       );

      $('[name=filter_field]').val('<%= session[:sr_filter_field] %>');
      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("template_documents_table_order");

      function get_order(force)
      {
        if (!Cookies.get("template_documents_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('template_documents_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("template_documents_table_order") ;
        }
      }
    }
  );
</script>