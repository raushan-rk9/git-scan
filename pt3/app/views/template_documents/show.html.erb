<ul class="list-group">
  <li class="list-group-item active">
    <h5>
      <%= "Template Document: #{@template_document.title}" %>
    </h5>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Description:</strong>
      <%= @template_document.description %><br>
      <strong>Notes:</strong>
      <%= @template_document.notes %><br>
      <strong>Type:</strong>
      <%= @template_document.document_type %><br>
      <strong>Class:</strong>
      <%= @template_document.document_class %><br>
      <strong>File:</strong>

      <% if @template_document.file.attached? %>
        <%= link_to @template_document.file.filename, url_for(@template_document.file) %>
      <% end %>
    </p>
  </li>
</ul>

<% if policy( @template_document).edit? &&  @template_document.id %>
  <%=
      link_to 'Edit Template Document',
              edit_template_template_document_path(@template,
                                                   @template_document,
                                                   awc: params[:awc]),
              class: 'btn btn-default'
    %>
<% end %>

<%=
    link_to 'New Template Document',
            new_template_template_document_path(@template,
                                                @template_document,
                                                awc: params[:awc]),
            class: "btn btn-primary"
%>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>
