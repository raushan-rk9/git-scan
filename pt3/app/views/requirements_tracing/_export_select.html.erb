<%= simple_form_for :rtm_export, { url: item_requirements_tracing_export_path + "?type=#{params['type']}" } do |f| %>
  <%= f.input :export_type, collection: Constants::Export_RequirementTypes, include_blank: false %>
  <input id='requirements', name='requirements', type='hidden' value='<%= params['requirements'] %>'/>
  <%= f.button :submit, "Export" %>
  <%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)', class: 'btn' %>

  <% if @undo_path.present? && !session[:archives_visible].present? %>
    <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
  <% end %>

  <% if @redo_path.present? && !session[:archives_visible].present? %>
    <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
  <% end %>
<% end %>
<script>
    $(document).ready(function() {
        setInterval(function() {
            $.get('poll');
        }, ${(pageContext.session.maxInactiveInterval - 10) * 1000});
    });
</script>