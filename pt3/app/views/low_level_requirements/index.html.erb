              <%= link_to image_tag(low_level_requirement.document.file), item_document_display_path(@item, low_level_requirement.document) + '?new_window=true', target: :_blank %>
            <% end %>
          </td>
          <td><%= low_level_requirement.category %></td>
          <td class="td-centered"><%= checkicon(low_level_requirement.safety) %></td>
          <td class="td-centered"><%= checkicon(low_level_requirement.derived) %></td>
          <td>
            <% if low_level_requirement.verification_method.instance_of?(Array) %>
              <%= low_level_requirement.verification_method.delete_if{ |x| !x.present? }.join("\n") %>
            <% elsif low_level_requirement.verification_method.instance_of?(String) %>
              <%= low_level_requirement.verification_method %>
            <% end %>
          </td>
          <td>
            <% if low_level_requirement.high_level_requirements.present? %>
              <% low_level_requirement.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
