          </td>
          <td class="td-centered">
            <% if policy(low_level_requirement).destroy? && !session[:archives_visible].present? %>
              <%= link_to [@item, low_level_requirement], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <%= material_icon.delete.md_24 %><br>Delete
              <% end %>
            <% else %>
              &nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

