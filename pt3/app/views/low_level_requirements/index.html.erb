  </div>
</form>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= @item.get_item_title(:low_level, :singular_shortened) %></th>
      <th class="th-sm"><%= t('misc.desc') %></th>
      <th class="th-sm"><%= t('misc.cat') %></th>
      <th class="th-sm" class="td-centered">Safety Related</th>
      <th class="th-sm" class="td-centered">Derived</th>
      <th class="th-sm">Verification Method</th>
      <th class="th-sm">Linked <%= Item.item_type_title(@item, :high_level, :plural) %></th>
      <th class="th-sm">Linked <%= t('misc.model_file') %></th>
      <th class="th-sm" class="td-centered"><%= t('versioning.versionid') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @low_level_requirements.each do |low_level_requirement| %>
      <% if low_level_requirement.soft_delete %>
        <tr>
          <td style='text-decoration: line-through;' ><%= low_level_requirement.fullreqid %></td>
          <td style='text-decoration: line-through;' ><%= low_level_requirement.description.to_s.html_safe %></td>
          <td style='text-decoration: line-through;' ><%= low_level_requirement.category %></td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= checkicon(low_level_requirement.safety) %></td>
          <td class="td-centered" style='text-decoration: line-through;' ><%= checkicon(low_level_requirement.derived) %></td>
          <td style='text-decoration: line-through;' >
            <% if low_level_requirement.verification_method.instance_of?(Array) %>
              <%= low_level_requirement.verification_method.delete_if{ |x| !x.present? }.join("\n") %>
            <% elsif low_level_requirement.verification_method.instance_of?(String) %>
              <%= low_level_requirement.verification_method %>
            <% end %>
          </td>
          <td style='text-decoration: line-through;' >
            <% if low_level_requirement.high_level_requirements.present? %>
              <% low_level_requirement.high_level_requirements.each do |hlr| %>
                <%= link_to hlr.fullreqid, item_high_level_requirement_path(@item, hlr.id) + '?new_window=true', target: :_blank %><br>
              <% end %>
            <% end %>
          </td>

          <% if low_level_requirement.model_file.try(:description) %>
            <td style='text-decoration: line-through;' >
              <%= low_level_requirement.model_file.try(:description) %>
            </td>
          <% elsif low_level_requirement.document.try(:name) %>
            <td style='text-decoration: line-through;' >
              <%= low_level_requirement.document.try(:name) %>
            </td>
          <% else %>
            <td>
            </td>
          <% end %>

          <td class="td-centered" style='text-decoration: line-through;' ><%= low_level_requirement.version %></td>
          <td class="td-centered" style='text-decoration: line-through;' >
           <% if policy(low_level_requirement).show? %>
             <%= link_to item_low_level_requirement_path(@item, low_level_requirement) do %>
               <%= material_icon.zoom_in.md_24 %><br>Show
             <% end %>
           <% else %>
             &nbsp;
           <% end %>
          </td>
          <td class="td-centered" style='text-decoration: line-through;' >
            <% if policy(low_level_requirement).edit? %>
