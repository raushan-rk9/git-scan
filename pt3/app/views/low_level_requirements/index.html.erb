<form name="filter" id="filter" class="filter-form" action="<%= item_low_level_requirements_path(@item) %>"  method="put">
  <div class="filter-form">
    Field:
    &nbsp;
    <select id="filter_field" name="filter_field" style="width: 25%;">
      <option value="full_id"><%= @item.get_item_title(:low_level, :singular_shortened) %></option>
      <option value="description">Description</option>
      <option value="category">Category</option>
      <option value="verification_method">Verification Method</option>
      <option value="safety">Saftey Related</option>
      <option value="derived">Derived</option>
      <option value="version">Version</option>
      <option value="high_level_requirement_associations"><%= Item.item_type_title(@item, :high_level, :plural) %></option>
      <option value="derived_justification">Derived Justification</option>
    </select>
    &nbsp;
    Value:
    &nbsp;
    <input id="filter_value" name="filter_value" value='<%= session[:llr_filter_value] %>' type="text" style="width: 25%;">
