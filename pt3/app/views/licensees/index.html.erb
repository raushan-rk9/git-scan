<h1>Organizations</h1>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm">Identifier</th>
      <th class="th-sm">Name</th>
      <th class="th-sm">License type</th>
      <th class="th-sm">Renewal date</th>
      <th class="th-sm">Administrator</th>
      <th class="th-sm">Contact information</th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @licensees.each do |licencee| %>
      <tr>
        <td><%= licencee.identifier %></td>
        <td><%= licencee.name %></td>
        <td><%= licencee.license_type %></td>
        <td><%= licencee.renewal_date %></td>
        <td><%= User.fullname_from_email(licencee.administrator) %></td>
        <td><%= raw(licencee.contact_information) %></td>
        <td class="td-centered">
         <% if policy(licencee).show? %>
           <%= link_to licensee_path(licencee) do %>
             <%= material_icon.zoom_in.md_24 %><br>Show
           <% end %>
         <% else %>
           &nbsp;
         <% end %>
        </td>
        <td class="td-centered">
          <% if policy(licencee).edit? %>
            <%= link_to edit_licensee_path(licencee) do %>
             <%= material_icon.edit.md_24 %><br>Edit
          <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(licencee).destroy? %>
            <%= link_to licencee, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "New Organization", new_licensee_path, class: "btn btn-primary" %>
<%= link_to 'Back',             go_back_path(1),  onclick: 'validateBack(1, this)',   class: 'btn' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>

<script>
  if (document.cookie.match(/scrollTop=(\d+)/))
    $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

  $(document).ready
  (
    function()
    {
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("licensees_table_order"))
        sortOrder = Cookies.get("licensees_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
      );

      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("licensees_table_order");

      function get_order(force)
      {
        if (!Cookies.get("licensees_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('licensees_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("licensees_table_order") ;
        }
      }
    }
  );
</script>
