<h1><%= "#{t('archives.pl_title')} #{t('misc.list')}" %></h1>

<table id="scrollableDataTable" class="table table-striped table-bordered table-sm" cellspacing="0"  width="100%">
  <thead>
    <tr>
      <th class="th-sm"><%= t('misc.name') %></th>
      <th class="th-sm"><%= t('misc.ident') %></th>
      <th class="th-sm"><%= t('misc.desc') %></th>
      <th class="th-sm"><%= t('versioning.revision') %></th>
      <th class="th-sm">Draft <%= t('versioning.versionid') %></th>
      <th class="th-sm"><%= t('archives.archived_at') %></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
      <th class="th-sm"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.name %></td>
        <td><%= archive.full_id %></td>
        <td><%= sanitize archive.description %></td>
        <td class="td-centered"><%= archive.revision %></td>
        <td class="td-centered"><%= archive.version %></td>
        <td><%= archive.archived_at %></td>
        <td class="td-centered">
          <% if policy(archive).view? %>
            <%= link_to project_archive_view_path(@project, archive) do %>
              <%= material_icon.input.md_24 %><br>View<br>Contents
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(archive).show? %>
            <%= link_to project_archive_path(@project, archive) do %>
              <%= material_icon.zoom_in.md_24 %><br>Show
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(archive).edit? %>
            <%= link_to [:edit, @project, archive] do %>
              <%= material_icon.edit.md_24 %><br>Edit
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
        <td class="td-centered">
          <% if policy(archive).destroy? %>
            <%= link_to [@project, archive], method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= material_icon.delete.md_24 %><br>Delete
            <% end %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Archive', new_project_archive_path(@project),  class: "btn btn-primary", style: "color:white" %>

<% if session[:archives_visible] %>
  <%= link_to 'Hide Archives', archives_show_path, class: 'btn btn-default' %>
<% else %>
  <%= link_to 'Show Archives', archives_show_path, class: 'btn btn-default' %>
<% end %>

<%= link_to 'Back', go_back_path(1),  onclick: 'validateBack(1, this)',               class: 'btn btn-default' %>

<% if @undo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Undo', @undo_path, class: 'btn btn-default', title: @undo_message %>
<% end %>

<% if @redo_path.present? && !session[:archives_visible].present? %>
  <%= link_to 'Redo', @redo_path, class: 'btn btn-default', title: @redo_message %>
<% end %>

<script>
  if (document.cookie.match(/scrollTop=(\d+)/))
    $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

  $(document).ready
  (
    function()
    {
      var first     = true;
      var sortOrder = '[0, "asc"]';

      if (Cookies.get("archives_table_order"))
        sortOrder = Cookies.get("archives_table_order")
    
      if (document.cookie.match(/scrollTop=(\d+)/))
        $(window).scrollTop(document.cookie.match(/scrollTop=(\d+)/)[1]);

      $('#scrollableDataTable').DataTable
      (
        {
          "sDom":           "Rlfrtip",
          "scrollX":        true,
          "scrollY":        "55vh",
          "aLengthMenu":    [[10, 50, 100, -1], [25, 50, 100, "All"]],
          "pageLength":     -1,
          "scrollCollapse": true,
          "paging":         false,
          "ordering":       true,
          "info":           false,
          "drawCallback":   function(settings)
                            {
                              get_order(!first);
                            },
          "order":          JSON.parse(sortOrder)
        }
      );

      $(window).unload(function() {document.cookie = "scrollTop=" + $(window).scrollTop();});

      var tableOrder  = Cookies.get("archives_table_order");

      function get_order(force)
      {
        if (!Cookies.get("archives_table_order") || force)
        {
          var table   = $('#scrollableDataTable').DataTable();
          var date    = new Date();
          var minutes = 30;

          first       = false;

          date.setTime(date.getTime() + (minutes * 60 * 1000));
          Cookies.set('archives_table_order', table.order(), { expires: date });

          return table.order();      
        }
        else
        {
          first       = false;

          return Cookies.get("archives_table_order") ;
        }
      }
    }
  );
</script>-